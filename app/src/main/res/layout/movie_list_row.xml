<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:clickable="false"
    android:orientation="vertical">

    <TextView
        android:id="@+id/skill_name"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="te1"/>

    <TextView
        android:id="@+id/skill_description"
        android:layout_below="@id/skill_name"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="te2fdgdfgdfgdfgdfgdfgdfgdfgddfgdfgdfgdfgdfgdfgdfgdfgdfgddfg"
        android:textSize="@dimen/abc_text_size_small_material"/>


    <RatingBar
        android:id="@+id/skill_rating"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1.0"
        android:rating="2.0"
        android:layout_alignParentRight="true"
        android:isIndicator="true"
        android:progressTint="@color/colorAccent"
        android:secondaryProgressTint="@color/colorGreen"
        />

</RelativeLayout>